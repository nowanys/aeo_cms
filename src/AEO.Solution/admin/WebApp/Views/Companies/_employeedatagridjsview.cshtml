			},
           {     /*年龄*/
                 field:'Age', 
                 title:'<span class="required">@Html.DisplayNameFor(model => model.Age)</span>', 
                 width:100, 
                 align:'right',
                 editor:{
                        type:'numberbox',
                        options:{ prompt:'@Html.DisplayNameFor(model => model.Age)',
                                  required:true,
