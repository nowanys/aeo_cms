								onChange: function (value) {
								if (value == '') {
									$employeedg.datagrid('removeFilterRule', 'DepartmentId');
								} else {
									$employeedg.datagrid('addFilterRule', {
										field: 'DepartmentId',
										op: 'equal',
										value: value
								});
							}
							$employeedg.datagrid('doFilter');
						}
