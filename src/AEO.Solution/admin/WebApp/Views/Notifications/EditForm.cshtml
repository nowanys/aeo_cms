﻿@model WebApp.Models.Notification
<!-- begin master section -->
<div  class="main-form">
<!--begin notification form  -->
<form id="notification_form" method="post" novalidate="novalidate" >
@Html.AntiForgeryToken()
   @Html.HiddenFor(x=>x.Id)
 <fieldset>
 <div class="form-group form-group-sm">
      <div class="row">

        <!--主题-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.Title)</span> </label>
			@Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Title) } })
      
         </div>

        <!--消息内容-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Content) </label>
			@Html.EditorFor(x => x.Content, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Content) } })
      
         </div>

        <!--链接-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Link) </label>
			@Html.EditorFor(x => x.Link, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Link) } })
      
         </div>

		
      <!--已读-->
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
              <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.Read)</span> </label>
              <div class="checkbox  no-margin">
              <label>
                 <input id="@Html.IdFor(model => model.Read)"
                       name="@Html.NameFor(model => model.Read)"
                       value="true" @(Model.Read ? "checked=\"checked\"" : "")
                       class="checkbox style-0"
                       tabindex="6"
                       type="checkbox" />
                <span>@Html.DisplayNameFor(model => model.Read)</span>
              </label>
            </div>
      </div>

        <!--From-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.From) </label>
			@Html.EditorFor(x => x.From, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.From) } })
      
         </div>

        <!--From-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.To) </label>
			@Html.EditorFor(x => x.To, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.To) } })
      
         </div>
	   </div>
    </div>
 <div class="form-group form-group-sm">
      <div class="row">

		<!--类型-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.Group)</span> </label>
            @Html.EditorFor(x => x.Group, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.Group) } })

        </div>

       <!--发出时间-->
       <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.Created)</span> </label>
            <div class="input-group">
			  @Html.EditorFor(x => x.Created, 
                         new { htmlAttributes = new { @class = "form-control datepicker hasDatepicker",
                               placeholder = Html.DisplayNameFor(x => x.Created ) } })
               <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			 </div>
         </div>
	    
   </div>
  </div>
</fieldset>
</form>
<!-- end notification form  -->
</div>

<!-- end master section -->
<!--========================================================================================-->

